<script>
    $(document).ready(function () {

        $("#myform").submit(function () { // intercepts the submit event
            console.log('Registration form has been submitted.')
            //clear result message
            $("#result").html('&nbsp;');
            $.ajax({ // make an AJAX request
                type: "POST",
                url: "/auth/register", // it's the URL of your component B
                data: $("#myform").serialize(), // serializes the form's elements
                success: function (data) {
                    // show the data you got from B in result div
                    console.log('Success');
                    $("#result").html('Your registration was successful! Please check your mail.');
                    $("#result").removeClass("fail");
                    $("#result").addClass("success");

                    $('#username').attr('readonly', true);
                    $('#userEmail').attr('readonly', true);
                    $('#userPass').attr('readonly', true);
                    $('#registerbutton').prop("disabled", true);
                    
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    console.log('Submit returned errors');
                    //console.log(textStatus);
                    //console.log(errorThrown);
                    jsonErrorMessage = XMLHttpRequest.responseJSON.error;
                    $("#result").html(jsonErrorMessage);
                    $("#result").removeClass("success");
                    $("#result").addClass("fail");
                }

            });
            return false; // avoid to execute the actual submit of the form
        });

    });
</script>

